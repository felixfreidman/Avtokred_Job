form(action="", method="post").application-form
    .first-screen.form-screen.screen--show#firstScreen
        .screen-header Вы уже определились, какой автомобиль хотите? 
        .application-button.application-button--yes#definedForm Да
        .application-button.application-button--no#detailedForm Нет
        .application-form__navigation 
            .navigation__progress-bar.navigation__progress-bar--basic  
        //- .navigation-controller    
        //-     .form-navigation__button.form-navigation__button--prev.form-navigation__button--disabled 
        //-     .form-navigation__button.form-navigation__button--next#secondScreenButton
    .second-screen.form-screen.screen--hide#secondScreen 
        .screen-header Выберете пожалуйста тип ТС
        .application-table
            input#lightAutoOption(type="radio", name="autoSelect", checked).application-form__radio 
            label(for="lightAutoOption").application-table__option 
                img(src="./assets/images/content/slide1Car.png", alt="").application-image
                .application-caption Легковой автомобиль
            input#motoAutoOption(type="radio", name="autoSelect").application-form__radio
            label(for="motoAutoOption").application-table__option 
                img(src="./assets/images/content/slide1Moto.png", alt="").application-image
                .application-caption Мотоцикл
            input#specAutoOption(type="radio", name="autoSelect").application-form__radio
            label(for="specAutoOption").application-table__option 
                img(src="./assets/images/content/slide1Truck.png", alt="").application-image
                .application-caption Спецтехника
            input#otherAutoOption(type="radio", name="autoSelect").application-form__radio
            label(for="otherAutoOption").application-table__option
                img(src="./assets/images/content/slide1Other.png", alt="").application-image
                .application-caption Другое
        .application-form__navigation 
            .navigation__progress-bar.navigation__progress-bar--20p 
        .navigation-controller    
            .form-navigation__button.form-navigation__button--prev#firstScreenButton 
            .form-navigation__button.form-navigation__button--next#thirdScreenButton
    .third-screen.form-screen.screen--hide#thirdScreen 
        .slider-header Укажите сумму кредита
        .application-slider 
            .slider--debt#sliderDebt
            input#debtInput(type="text", name="debtInput").application-input
        .slider-header Укажите срок кредитования
        .application-slider 
            .slider--debt#sliderTime
            input#timeInput(type="text", name="debtInput").application-input
        .slider-header Укажите первый взнос
        .application-slider 
            .slider--debt#sliderInvest
            input#investInput(type="text", name="debtInput").application-input
        .application-form__navigation 
            .navigation__progress-bar.navigation__progress-bar--40p 
        .navigation-controller    
            .form-navigation__button.form-navigation__button--prev#secondScreenButton 
            .form-navigation__button.form-navigation__button--next#finalScreenButton
    .final-screen.form-screen.screen--hide#finalScreen 
        .screen-header Оставьте ваши контактные данные 
        label(for="userName").submit-label Имя
            input#userName(type="text", name="userName", placeholder="Ваше имя", required).submit-input
        label(for="userPhone").submit-label Телефон
            input#userPhone(type="text", name="userPhone", placeholder="Ваш номер телефона", required).submit-input
        button(type="submit").submit-button Оставить заявку
        .application-form__navigation 
            .navigation__progress-bar.navigation__progress-bar--100p 
        .navigation-controller    
            .form-navigation__button.form-navigation__button--prev#thirdScreenButton 
            .form-navigation__button.form-navigation__button--next.form-navigation__button--disabled#finalScreenButton